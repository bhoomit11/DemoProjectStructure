<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin30"
        android:layout_marginRight="@dimen/margin30"
        android:layout_weight="0.65"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bnt_height_65"
            android:src="@drawable/txt_logo" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bnt_height_35"
                android:background="@drawable/edit_text_base"
                android:fontFamily="@font/elliot_sans_regular"
                android:gravity="center_vertical"
                android:hint="Email ID / Mobile Number"
                android:inputType="text"
                android:maxLength="100"
                android:paddingLeft="@dimen/margin10"
                android:singleLine="true"
                android:textSize="@dimen/textsize12" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bnt_height_35"
                android:background="@drawable/edit_text_base"
                android:fontFamily="@font/elliot_sans_regular"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:paddingLeft="@dimen/margin10"
                android:singleLine="true"
                android:textSize="@dimen/textsize12" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_forget_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:fontFamily="@font/elliot_sans_regular"
            android:gravity="right"
            android:text="Forgot Password?"
            android:textSize="@dimen/textsize14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin30"
        android:layout_marginRight="@dimen/margin30"
        android:layout_weight="0.45"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/bnt_width_60"
            android:layout_height="@dimen/bnt_height_30"
            android:layout_marginTop="@dimen/margin5"
            android:background="@drawable/base_btn"
            android:fontFamily="@font/elliot_sans_regular"
            android:text="LOG IN"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.45"
                android:background="@color/colorAccent"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:fontFamily="@font/elliot_sans_regular"
                android:gravity="center"
                android:text="or"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textsize14" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.45"
                android:background="@color/colorAccent"></View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin15"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/elliot_sans_regular"
                android:text="LOG IN WITH"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin15"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bt_act_login_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_twitter"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/bt_act_login_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin15"
                    android:src="@drawable/icon_facebook" />

                <ImageView
                    android:id="@+id/btn_google_sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_google" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="@dimen/bnt_width_80"
            android:layout_height="@dimen/bnt_height_35"
            android:layout_marginTop="@dimen/margin30"
            android:background="@drawable/base_accent"
            android:fontFamily="@font/elliot_sans_regular"
            android:text="New User ?"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize10" />
    </LinearLayout>
</LinearLayout>
