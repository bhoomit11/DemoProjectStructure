<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/light_color_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/bnt_height_100"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin40"
                    android:adjustViewBounds="true"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:text="Martin"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:text="Click to view Profile"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14"
                    android:visibility="gone" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#d5d5d5"-->
            <!--android:layout_marginTop="@dimen/margin20"/>-->

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/menu_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="Home"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#d5d5d5"/>-->

            <LinearLayout
                android:id="@+id/ll_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/icon_friend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="Friends"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/menu_artist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="Artists"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/icon_events" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="Events"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_articles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/icon_article" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="Articles"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14"

                    />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#d5d5d5"/>-->

            <LinearLayout
                android:id="@+id/ll_ticket_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/menu_ticket" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="Ticket Info"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_directions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/icon_direction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="Directions"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/menu_transaction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="Transactions"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/menu_faq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="FAQ'S"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/menu_about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin10"
                    android:text="About Us"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin15"
                android:background="@drawable/bg_selectable"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/menu_image_height_width20"
                    android:layout_height="@dimen/menu_image_height_width20"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/menu_logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin5"
                    android:fontFamily="@font/lemon_milk_light"
                    android:padding="@dimen/margin10"
                    android:text="Logout"
                    android:textColor="@color/theme_dark"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>