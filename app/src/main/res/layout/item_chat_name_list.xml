<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin5">

    <ImageView
        android:id="@+id/iv_user_image"
        android:layout_width="@dimen/margin80"
        android:layout_height="@dimen/margin80"
        android:padding="@dimen/margin5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin10"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/elliot_sans_regular"
                android:singleLine="true"
                android:text="Hardip Chavda"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textsize16"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/notify_bg"
                android:fontFamily="@font/elliot_sans_regular"
                android:gravity="center"
                android:padding="@dimen/margin5"
                android:singleLine="true"
                android:text="10"
                android:textColor="@color/colorPrimary"
                android:textSize="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:fontFamily="@font/elliot_sans_regular"
            android:singleLine="true"
            android:text="Hello how are you my name is terroristg and Im an mda nje"
            android:textSize="@dimen/textsize14" />

    </LinearLayout>

</LinearLayout>