<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/faq_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/margin80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:text="About The Festival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemon_milk"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize25" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"></View>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin15"
            android:fontFamily="@font/elliot_sans_regular"
            android:padding="@dimen/margin20"
            android:textSize="@dimen/textsize16"></TextView>

    </LinearLayout>
</RelativeLayout>