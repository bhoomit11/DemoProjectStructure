<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#88000000"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@mipmap/overlay_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/textsize25"
        android:fontFamily="@font/elliot_sans_regular"
        android:textStyle="bold"
        android:padding="@dimen/margin10"
        android:background="@drawable/bg_square_green"
        android:rotation="-30"
        android:layout_gravity="top|left"
        android:layout_marginTop="@dimen/margin50"
        android:layout_marginLeft="@dimen/bnt_height_40"
        android:text="Accepted"/>

</android.support.v7.widget.CardView>